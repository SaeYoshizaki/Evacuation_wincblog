<Layout title="wincblog">
  <div class="header">
    <div class="headertext">
      <h1 class="title">WINCBLOG</h1>
      <div class="content_width">
        <div>
          <h2>WINCブログ</h2>
          <p class="explanation">コンピュータサークル「WINC」の活動記録。</p>
        </div>
        <img src="./LINE_ALBUM_春合宿写真_240229_119 1.png" alt="" class="pixture1">
      </div>
      <img src="./LINE_ALBUM_春合宿写真_240229_119 2.png" alt="" class="pixture2">
    </div>
  </div>

  <main>
    {categoriesData.map((category) => (
      <div class={`category ${category.id}`}>
        <div class="text">
          <h1 class="number">{category.id}</h1>
          <div class={category.id % 2 === 0 ? "right" : "left"}>
            <h3>{category.name}</h3>
            <a href={`./${category.slug}`} class="team_name">{category.name}</a>
          </div>
        </div>
        <img src={`./${category.slug}.png`} alt="" class="right_one" />
      </div>
    ))}

    <footer>
      <p>© 2024 Copyright: <span><a>コンピュータ研究会・WINC</a></span></p>
    </footer>
  </main>
</Layout>


