---
import Layout from '../layouts/Layout.astro';
import { getCategories } from "../libs/microcms"; 

const categories = await getCategories(); 
---

<Layout title="wincblog">
  <main>
    <h1>Wincの活動ブログ</h1>
    <ul>
      {categories.contents.map((category) => (
        <li>
          <a href={`/${category.id}`}>{category.name}</a>
        </li>
      ))}
    </ul>
  </main>
</Layout>


<!-- styleは適当です。リキ君がデザイン等々よろしく -->

<style>
  body {
    margin: 0;
    padding: 0;
    margin-top: 70px;
  }

  main {
    margin: auto;
    padding: auto;
    max-width: 60ch;
  }

  h1 {
    font-size: 60px;
    text-align: center;
  }

  ul {
    padding: 0;
    list-style-type: none;
    text-align: center;
  }

  li {
    margin-bottom: 10px;
  }

  a {
    font-size: 20px;
    color: black;
    text-decoration: none;
    font-weight: 600;
  }

  a:hover {
    background: rgb(179, 179, 239);
  }
</style>
