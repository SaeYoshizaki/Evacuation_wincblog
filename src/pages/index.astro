---
import Layout from "../layouts/Layout.astro";
import HamburgerMenu from "../components/Header/header.astro";
import { createClient } from 'microcms-js-sdk';

// クライアントの作成
const client = createClient({
  serviceDomain: 'your-service-domain',
  apiKey: 'your-api-key',
});

// データの取得関数
async function fetchData() {
  try {
    const response = await client.getList({ endpoint: 'your-endpoint' });
    return response.contents; // 取得したデータを返す
  } catch (error) {
    console.error(error);
    return []; // エラー時には空の配列を返す
  }
}

// データを取得
const categoriesData = await fetchData();

type Category = {
  id: number;
  name: string;
  slug: string;
};

const response = await fetch('https://public-api.wordpress.com/wp/v2/sites/wincblogs.wordpress.com/categories');
const categories: Category[] = await response.json();
