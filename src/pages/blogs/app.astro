---
import Layout from '../../layouts/Layout.astro';
import { getBlogsByCategory } from '../../libs/microcms';

const response = await getBlogsByCategory("app");
---
<Layout title="アプリ班">
  <main>
    <h1>アプリ班の活動</h1>
    <ul>
      {response.contents && response.contents.length > 0 ? (
        response.contents.map((blog: any) => (
          <li>
            <a href={`/blog/${blog.id}`}>・{blog.title}</a>
          </li>   
        ))
      ) : (
        <li>No blogs found</li>
      )}
    </ul>
  </main>
</Layout>
