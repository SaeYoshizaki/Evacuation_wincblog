---
import Layout from "../layouts/Layout.astro";
import { getBlogsByCategory, getBlogDetail } from "../libs/microcms";  

//↓自動的に記事が読み込まれるように
export async function getStaticPaths() {
    const response = await getBlogsByCategory({ fields :["id"]})
    return response.contents.map((blog: any) => ({
        params: {
            blogId: blog.id,
        }
    }))}

// 現在のブログIDに基づいて詳細を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId);
---
<!--blogid.astroは特定のブログ記事を精製するためのテンプレート -->
<Layout title={blog.title}>
  <main>
    <h1>{blog.title}</h1>
    <p>公開日時: {new Date(blog.publishedAt).toLocaleString()}</p>
    <div set:html={blog.content} />
  </main>
</Layout>
