---
import Layout from "../layouts/Layout.astro";
import { getBlogsByCategory, getBlogDetail } from "../libs/microcms";  //作った関数を読み込む

//↓ブログ記事ごとの詳細ページをビルド時に静的に生成するため
export async function getStaticPaths() {
    const response = await getBlogsByCategory({ fields :["id"]}) //getBlogsByCategoryを呼び出し、すべてのブログ記事のidだけを取得する
    return response.contents.map((blog: any) => ({
        params: {
            blogId: blog.id,
        } //すべてのブログ記事に対応するblogIdを含むオブジェクトがparamsとして返される。
    }))}

// 現在のブログIDに基づいて詳細を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId);
---
<!--blogid.astroは特定のブログ記事を精製するためのテンプレート -->
<Layout title={blog.title}>
  <main>
    <h1>{blog.title}</h1>
    <p>公開日時: {new Date(blog.publishedAt).toLocaleString()}</p>
    <div set:html={blog.content} />
  </main>
</Layout>
